{
  "name": "efp-indexer",
  "repository": "github:ethereumfollowprotocol/indexer",
  "type": "module",
  "scripts": {
    "dev": "bun --watch --hot ./src/index.ts",
    "start": "bun --watch --hot dist/index.js",
    "build": "bun build ./src/index.ts --minify --target='bun' --format='esm' --outfile='./dist/index.js'",
    "database:push": "bun drizzle-kit push:pg --config='drizzle.config.ts'",
    "database:introspect": "bun drizzle-kit introspect:pg --config='drizzle.config.ts'",
    "database:generate": "bun drizzle-kit generate:pg --config='drizzle.config.ts'",
    "database:migrate": "bun ./src/database/migration.ts",
    "lint": "biome check --apply .",
    "format": "biome format . --write",
    "typecheck": "tsc --project tsconfig.json --noEmit",
    "clean": "/bin/bash ./scripts/clean.sh"
  },
  "dependencies": {
    "@viem/anvil": "^0.0.6",
    "@wagmi/core": "2.0.0-beta.1",
    "consola": "^3.2.3",
    "drizzle-orm": "latest",
    "postgres": "^3.4.3",
    "viem": "2.0.0-beta.4"
  },
  "devDependencies": {
    "@biomejs/biome": "1.3.3",
    "@total-typescript/ts-reset": "^0.5.1",
    "@types/node": "^20.9.0",
    "@types/pg": "^8.10.7",
    "bun": "^1.0.7",
    "bun-types": "^1.0.11",
    "drizzle-kit": "^0.20.2",
    "tsx": "^4.1.1",
    "typescript": "^5.2.2"
  },
  "description": "Ethereum Follow Protocol Indexer",
  "homepage": "github:ethereumfollowprotocol/indexer/README.md",
  "private": true,
  "sideEffects": false
}
